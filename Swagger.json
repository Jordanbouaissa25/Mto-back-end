{
    "swaggerDefinition": {
        "openapi": "3.0.0",
        "info": {
            "title": "WorldWeather - World app meteo",
            "version": "1.0.0",
            "description": "API documentation"
        },
        "servers": [{
            "url": "http://localhost:3001",
            "description": "Development server"
        }],
        "components": {
            "securitySchemes": {
                "bearerAuth": {
                    "type": "http",
                    "scheme": "bearer",
                    "bearerFormat": "JWT"
                }
            },
            "schemas": {
                "User": {
                    "type": "object",
                    "required": [ "email", "password"],
                    "properties": {
                        "email": {
                            "type": "String",
                            "unique": true
                        },
                        "password": {
                            "type": "String"
                        },
                        "firstName": {
                            "type": "String"
                        },
                        "lastName": {
                            "type": "String"
                        },
                        "location": {
                            "type": "String"
                        },
                        "unit": {
                            "type": "String"
                        },
                        "wind_speed": {
                            "type": "String"
                        },
                        "city": {
                            "type": "String"
                        },
                        "token": {
                            "type":"String"
                        }
                    }
                },
                "Setting": {
                    "type": "object",
                    "required": ["setting_temperature", "setting_wind"],
                    "properties": {
                        "setting_temperature": {
                            "type": "String",
                            "enum": ["°C", "°F"]
                            
                        },
                        "setting_wind": {
                            "type": "String",
                            "enum": ["km/h", "mi/h"]
                        }
                    }
                },
                "Register": {
                    "type": "object",
                    "required": ["firstname", "lastname", "email", "phone_number", "password"],
                    "properties": {
                        "email": {
                            "type": "string",
                            "description": "The user's email",
                            "example": "johndoe@example.com"
                        },
                        "password": {
                            "type": "string",
                            "description": "The user's password",
                            "example": "secret"
                        }
                    }
                }
            },
            "responses": {
                "NotFound": {
                    "description": "Resource not found",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "type_error": {
                                        "type": "string",
                                        "example": "no-found"
                                    },
                                    "message": {
                                        "type": "string",
                                        "example": "Resource not found"
                                    }
                                }
                            }
                        }
                    }
                },
                "ValidationError": {
                    "description": "Validation error",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "type_error": {
                                        "type": "string",
                                        "example": "validator"
                                    },
                                    "message": {
                                        "type": "string",
                                        "example": "Validation error"
                                    }
                                }
                            }
                        }
                    }
                },
                "DuplicateError": {
                    "description": "Duplicate entry",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "type_error": {
                                        "type": "string",
                                        "example": "duplicate"
                                    },
                                    "message": {
                                        "type": "string",
                                        "example": "Duplicate entry"
                                    }
                                }
                            }
                        }
                    }
                },
                "MongoError": {
                    "description": "Internal server error",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "type_error": {
                                        "type": "string",
                                        "example": "error-mongo"
                                    },
                                    "message": {
                                        "type": "string",
                                        "example": "Internal server error"
                                    }
                                }
                            }
                        }
                    }
                }
                
            }
        },
        "tags": [{
                "name": "User",
                "description": "Operations about user"
            },
            {
                "name": "Bookings",
                "description": "Operations about bookings"
            }
        ]
    },
    "apis": [
        "./controllers/*.js"
    ]
}